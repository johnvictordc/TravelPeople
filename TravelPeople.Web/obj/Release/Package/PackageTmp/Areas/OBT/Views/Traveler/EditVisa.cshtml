@model TravelPeople.Commons.Objects.Visa

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Visa</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.visaID)

@model IEnumerable<TravelPeople.Commons.Objects.Visa>

<p>
    @Html.ActionLink("Add New Visa", "CreateVisa", new { id = ViewBag.TravelerID }, new { @class = "btn btn-primary" })
</p>

@if (((List<TravelPeople.Commons.Objects.Visa>) Model).Count > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VisaNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisaType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateIssued)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VisaNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisaType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateIssued)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditVisa", new { id=item.visaID }) |
                @Html.ActionLink("Delete", "DeleteVisa", new { id=item.visaID })
            </td>
        </tr>
    }

    </table>
}


@using TravelPeople.Web.Helpers
@model TravelPeople.Web.Models.InstaFlightModel

@using (Html.BeginForm("Index", "Booking", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-inline">
        <h3>Search Flights</h3>

        @Html.MyValidationSummary()

        @Html.HiddenFor(model => model.BookingReference)

        <div class="form-group">
            @Html.LabelFor(model => model.Origin)
            @Html.Partial("~/Views/Shared/EditorTemplates/SelectAirport.cshtml", new TravelPeople.Web.Models.AirportModel("Origin", "JFK"))
            @Html.ValidationMessageFor(model => model.Origin)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Destination)
            @Html.Partial("~/Views/Shared/EditorTemplates/SelectAirport.cshtml", new TravelPeople.Web.Models.AirportModel("Destination", "LAX"))
            @Html.ValidationMessageFor(model => model.Destination)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartureDate)
            @Html.EditorFor(model => model.DepartureDate)
            @Html.ValidationMessageFor(model => model.DepartureDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReturnDate)
            @Html.EditorFor(model => model.ReturnDate)
            @Html.ValidationMessageFor(model => model.ReturnDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.passengercount)
            @Html.EditorFor(model => model.passengercount)
            @Html.ValidationMessageFor(model => model.passengercount)
        </div>

        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}
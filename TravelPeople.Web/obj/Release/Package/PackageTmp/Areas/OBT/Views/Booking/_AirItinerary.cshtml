@model SACS.Library.Rest.Models.Common.AirItinerary

<div class="container">
    <div class="col-md-12">
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Departure Airport</th>
                    <th>Departure Time</th>
                    <th>Arrival Airport</th>
                    <th>Arrival Time</th>
                    <th>Price</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.OriginDestinationOptions.OriginDestinationOption)
                {
                    @Html.Partial("_FlightSegments", item)
                }
            </tbody>
        </table>
    </div>
</div>
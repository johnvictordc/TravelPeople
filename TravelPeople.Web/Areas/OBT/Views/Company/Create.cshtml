@using TravelPeople.Web.Helpers
@model TravelPeople.Commons.Objects.Company

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm()) 
